<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateEmail">

    <EditText
        android:id="@+id/enterNewEmailAgain_ET"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginBottom="116dp"
        android:ems="10"
        android:hint="enter new email again"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/saveChanges_Btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eneterNewEmail_ET"
        app:layout_constraintVertical_bias="0.313" />

    <EditText
        android:id="@+id/eneterNewEmail_ET"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="eneter new email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/saveChanges_Btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateEmail_TV"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/saveChanges_Btn2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:background="@color/blue_200"
        android:text="save changes"
        android:textColor="#212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateEmail_TV"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/updateEmail_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Email"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>